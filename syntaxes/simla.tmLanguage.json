{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "SIMLA Input",
    "scopeName": "source.simla",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#numbers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.character.simla",
                    "match": "^[Cc].*$"
                },
                {
                    "name": "comment.line.number-sign.simla",
                    "match": "#.*$"
                }
            ]
        },
        "keywords": {
            "name": "keyword.control.simla",
            "match": "(?i)\\b(SIMLA|END)\\b"
        },
        "numbers": {
            "name": "constant.numeric.simla",
            "match": "(?<![a-zA-Z])\\b((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)\\b"
        }
    }
}